{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,jpeg,gif,svg}", "/*.{css,scss,js,map}"]
  },
  "routes": [
    {
      "route": "/auth/*",
      "rewrite": "/auth/index.html"
    },
    {
      "route": "/auth/sign-in/*",
      "rewrite": "/auth/sign-in/index.html"
    },
    {
      "route": "/auth/callback/*",
      "rewrite": "/auth/callback/index.html"
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "application/javascript",
    ".css": "text/css"
  }
}

